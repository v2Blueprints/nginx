{
 "variables" : {
  "DEBIAN_FRONTEND" : "noninteractive"
 },
  "builders": [
    {
      "type": "lxd",
      "name": "lxd-ubuntu",
      "image": "images/debian/stretch/cloud",
      "output_image": "nginx:test",
      "publish_properties": {
        "description": "Trivial repackage with Packer"
      }
    }
   ],
 "provisioners": [
    {
      "type": "shell",
      "inline": ["apt-get -y update", "apt-get install -y nginx "]
    }
  ]
}
